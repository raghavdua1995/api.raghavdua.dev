{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "promise",
        "json",
        "markdown",
        "optimize-regex",
        "security",
        "no-secrets"
    ],
    "extends": [
        "google",
        "plugin:promise/recommended",
        "plugin:security/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-secrets/no-secrets":"error",
        "optimize-regex/optimize-regex": "warn"
    }
}